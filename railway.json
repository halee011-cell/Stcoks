{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": { "install": { "cmds": ["pip install -r requirements.txt"] } }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "uvicorn.main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}
